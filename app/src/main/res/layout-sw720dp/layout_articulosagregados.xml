<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:id="@+id/txtdesArt"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Comedor 4 Sillas"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/txtmodart"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Carlos V"
        android:textSize="18sp"
        />
    <EditText
        android:id="@+id/etcantArt"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:inputType="number"
        android:textSize="18sp"
        />
    <TextView
        android:id="@+id/txtprecioart"
        android:textStyle="bold"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="5678.00"
        android:textSize="18sp"
        />

    <FrameLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtimpart"
            android:textStyle="bold"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="5678.00"
            android:textSize="18sp"
            />

        <ImageView
            android:layout_gravity="end"
            android:id="@+id/btndelArt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_delete"
            />
    </FrameLayout>
</LinearLayout>